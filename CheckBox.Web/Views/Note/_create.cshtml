@model NoteViewModel;

<div class="row mt-2" style="text-align:end;">
    <div class="col-md-12">
        <button type="button" class="btn btn-light" data-toggle="modal" data-target="#createNote">Create</button>
    </div>
</div>
<div class="modal fade" id="createNote" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title" id="exampleModalLabel">New Note</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="post" asp-action="Create">
            <div class="modal-body bg-dark">
                    <div class="row mt-2">
                        <div class="col-md-12">
                            <p>De um nome a sua Note.</p>
                            @Html.TextBoxFor(x => x.Name, new{Placeholder="Nome", @class="form-control"})
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12">
                            <p>Agora dê sentido à ela.</p>
                            @Html.TextAreaFor(x => x.Content, new{Placeholder="Conteudo", @class="form-control"})
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
            </div>
            <div class="modal-footer bg-dark">
                <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-outline-warning">Save</button>
            </div>
            </form>
        </div>
    </div>
</div>