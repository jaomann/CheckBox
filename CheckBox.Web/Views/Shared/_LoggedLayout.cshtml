<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div>
        <header>
            <nav class="nav nav-pills flex-column flex-sm-row justify-content-end bg-transparent">
                <a class="pt-2  flex-sm-justified btn-outline-warning text-sm-center nav-link active" asp-action="Index" asp-controller="Note">Notes</a>
                <a class="pt-2  flex-sm-justified text-sm-center nav-link" href="#">Perfil</a>
                <a class="pt-2 mr-2 text-muted flex-sm-justified  text-sm-center nav-link" href="#">Sobre</a>
                <a class="pt-2 mr-2 flex-sm-justified btn btn-outline-danger  text-sm-center nav-link" asp-action="Index" asp-controller="Auth">Logout</a>
            </nav>
        </header>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
